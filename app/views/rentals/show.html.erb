<div class="black-text">
  <div class="center-align">
    <h1>
      <%= @rental.name %>
    </h1>
    <br/>
    <div class="row">
      <div class="col s12">
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="materialboxed">
              <%= image_tag(@rental.image.url, class: "responsive-img") %>
            </div>
          </div>
          <div class="col s8 offset-s2">
            <div class="card-panel ">
           <span class="black-text">
             <p>Description:
               <%= @rental.description %>
             </p>
             <%= render partial: "amenities" %>
             <div class="section"></div>
              <p class="center-align">
                Rate: <%= format_currency(@rental.price) %>/night
              </p>
             <% if @rental.retired? %>
                <div class="btn disabled">
                  Unavailable
                </div>
              <% else %>
                <div class="waves-effect waves-light btn white-text">
                  <%= link_to "Reserve it!", new_cart_rental_path(id: @rental.id) %>
                </div>
              <% end %>
            </div>
            </span>
          </div>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="col s12 m8 offset-m2 l6 offset-l3">
  <div class="card-panel grey lighten-5 z-depth-1">
    <div class="row valign-wrapper">
      <div class="col s3">
        <%= image_tag(@rental.owner.image_url, class: "responsive-img circle outline") %>
      </div>
      <div class="col s9 center-align">
             <span class="black-text">
               <h4>Meet Your Host: <%= @rental.owner_name %></h4>
             </span>
        <h4>Username: <%= @rental.owner_username %>
      </div>
    </div>
  </div>
</div>