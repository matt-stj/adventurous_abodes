<div class="black-text">
  <div class="center-align">
    <h1>
      <%= @rental.name.capitalize %>
    </h1>
  <br/>
  <div class="row">
    <div class="col s4">
      <div class="card">
            <div class="card-image">
              <%= image_tag(@rental.image.url, class: "responsive-img") %>
            </div>
          </div>
    </div>
    <div class="col s8">
      <div class="card-panel ">
         <span class="black-text">
           <p>Description:
            <%= @rental.description %>
           </p>
            <p class="center-align">
              <%= "Trip price: #{format_currency(@rental.price)}" %>
            </p>
            <%= render partial: "amenities" %>
              <% if @rental.status == "inactive" %>
              <div class="btn disabled">
                Unavailable
              </div>
              <% else %>
                <div class="waves-effect waves-light btn white-text">
                  <%= get_purchase_link_or_retired_notice %>
                </div>
              <% end %>
          </div>
         </span>
       </div>
      </p>
    </div>
  </div>
</div>


<div class="col s12 m8 offset-m2 l6 offset-l3">
       <div class="card-panel grey lighten-5 z-depth-1">
         <div class="row valign-wrapper">
           <div class="col s3">
               <%= image_tag(@rental.owner.image_url, class: "responsive-img circle outline") %>
           </div>
           <div class="col s9 center-align">
             <span class="black-text">
               <h4>Meet Your Host: <%= @rental.owner.name %></h4>
             </span>
              <h4>Contact: <%= @rental.owner.username %>
           </div>
         </div>
       </div>
     </div>
