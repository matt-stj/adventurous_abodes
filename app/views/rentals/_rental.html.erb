<div class="rental" id="<%= format_url_name(rental.name) %>">
  <div class="col s12 m4">
    <div class="card medium">
      <div class="card-image">
        <%= image_tag(rental.image.url(:thumbnail)) %>
      </div>
      <div class="card-content">
        <span class="card-title">
          <%= truncate(rental.name.capitalize, length: 20) %>
        </span>
        <p>
          <%= truncate("#{rental.description}", length: 50) %>
        </p>
        <br/>
        <%= "#{format_currency(rental.price)}" %>
      </div>
      <div class="card-action center-align">
        <%= link_to "Details", rental_path(rental), class: "btn teal lighten-1 white-text" %>
      </div>
    </div>
  </div>
</div>
