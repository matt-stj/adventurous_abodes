.cart.white
  %table
    - @rentals.each do |rental|
      .rental_card
        %tr
          .row
            .col.s3
              = image_tag(rental.image.url, class: "responsive-img")
            .col.s6
              %h2= rental.name
              %p= rental.description
              %p= "Price: #{format_currency(rental.price)}"
              %p= "Dates: #{@start_date} - #{@end_date}"
              %p= "Number of Nights: NUMBER OF #{@start_date} NIGHTS SELECTED"
              %p= "Sub-total: NUMBER OF NIGHTS * PRICE"

            .col.s2
              %br
              %br
              %br
              .waves-effect.waves-light.btn.white-text
                = button_to "Remove", cart_path( { rental_id: rental.id }), method: :delete
