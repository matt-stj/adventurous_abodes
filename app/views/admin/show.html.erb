<div class="center-align">
  <h2 class="section">Admin Dashboard</h2>

  <%= link_to "Manage Owners", admin_owners_path, class: "btn section" %>

  <h4 class="section">Pending Owner Requests</h4>
  <div class = "pending-owners">
    <div class="row section">
      <div class="col m8 offset-m2">
        <table class="bordered">
          <thead>
            <tr>
              <th class="center"></th>
              <th class="center"></th>
              <th class="center"></th>
            </tr>
          </thead>
          <tbody>
            <% @owners.each do |owner| %>
            <tr>
              <td class="center"><%= link_to owner.username, admin_owner_path(owner) %></td>
              <td class="center"><%= link_to "Approve",  admin_owners_path(owner, :owner_status => 'active'), id: "Approve", method: :post %></td>
              <td class="center"><%= link_to "Deny",  admin_owners_path(owner, :owner_status => nil), id: "Deny", method: :post %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
