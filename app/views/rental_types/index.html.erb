<div class="rentals-container">
  <div class="rentals-bg">
    <div class="row">
      <div class="row center-align">
      <div class="col s12">
        <h1 class="white-text text-outline push-down">A home for your next adventure.</h1>
      </div>
    </div>
  </div>
</div>
</div>

<div class="center-align">
<div class="featured-rentals grey lighten-5">

  <h2 class="black-text section">Featured Rentals</h2>
  <div class="container">

    <div class="row center-align section">
          <div class="col s6">
            <div class="card medium">
              <div class="card-image waves-effect waves-block waves-light">
                <%= image_tag('igloo/igloo5.jpg', class: "activator") %>
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">Igloos<i class="material-icons right">more_vert</i></span>
                <p><a class="btn" href="#">All Igloos</a></p>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Live like an Eskimo!<i class="material-icons right">close</i></span>
                <p>Take a peek at some of our new igloo abodes where you'll never get cold!</p>
                <p><a class="btn" href="#">See More!</a></p>
              </div>
            </div>
          </div>

          <div class="col s6">
            <div class="card medium">
              <div class="card-image waves-effect waves-block waves-light">
                <%= image_tag('treehouse/th2.jpg', class: "activator") %>
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">Treehouses<i class="material-icons right">more_vert</i></span>
                <p><a class="btn" href="#">All Treehouses</a></p>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4">Live like Tarzan!<i class="material-icons right">close</i></span>
                <p>Harness the child in you and spend a night in one of our tree-top abodes!</p>
                <p><a class="btn" href="#">See More!</a></p>
              </div>
            </div>
          </div>

  </div>
</div>
</div>

<div class="container">

  <h2 class="section">Select A Rental Type</h2>

  <div class="input-field col s12 section">
    <select class = "browser-default">
      <option value="" disabled selected>Where do you want to stay??</option>
      <% @rental_types.each do |rental_type| %>
        <option value= "<%= rental_type.name %>"><%= rental_type.name %></option>
      <% end %>
    </select>
  </div>

  <div class="row displayed-rentals hidden section">
  <% @rental_types.each do |rental_type| %>
    <div class="<%= rental_type.name.downcase %> rentals">
      <% @rental_types.find_by(name: rental_type.name ).rentals.active.each do |rental| %>
        <%= render partial: 'rentals/rental', locals: {rental: rental}  %>
      <% end %>
    </div>
  <% end %>
</div>
</div>
</div>
